  <view class="right" wx:if="{{showMore}}" bindtap="handleRightClick">
    <view class="slot">
      <slot></slot>
    </view>
    <view class="defalut">
      <text>{{rightText}}</text>
      <image class="icon" src="/assets/images/icons/arrow-right.png"></image>
    </view>
  </view>
</view>
